---
import { projects } from '@/cv.json';
---

<section class='grid grid-cols-[repeat(auto-fill,minmax(300px,1fr))] gap-4'>
  {
    projects.map(({ name, description, github }) => (
      <article class='flex min-h-[200px] flex-col items-start justify-between rounded-lg border p-4'>
        <div>
          <h3 class='mb-2 text-lg font-semibold'>{name}</h3>
          <p class='text-muted-foreground text-sm'>{description}</p>
        </div>
        {github && (
          <a
            href={github}
            title='Ver proyecto'
            target='_blank'
            class='hover:text-primary hover:border-primary mt-4 w-full cursor-pointer rounded-lg border px-4 py-2.5 text-center'
          >
            Ir al proyecto
          </a>
        )}
      </article>
    ))
  }
</section>
