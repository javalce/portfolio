---
import type { HTMLAttributes } from 'astro/types';

import { tv } from 'tailwind-variants';

interface Props extends Omit<HTMLAttributes<'button'>, 'type' | 'id' | 'role'> {
  value: string;
}

const tabsTrigger = tv({
  base: [
    'flex items-center gap-2 whitespace-nowrap border-r px-3 py-1.5 text-xs font-medium transition-colors',
    'data-[state=active]:border-b-primary data-[state=inactive]:hover:text-primary data-[state=inactive]:cursor-pointer data-[state=active]:border-b-2',
    'focus-visible:outline-outline focus-visible:outline-2 focus-visible:outline-offset-2',
    'disabled:pointer-events-none disabled:opacity-50',
  ],
});

const { value, class: className, ...rest } = Astro.props;
---

<button
  class={tabsTrigger({ class: className })}
  data-tabs-trigger
  data-value={value}
  data-state='inactive'
  role='tab'
  aria-selected='false'
  {...rest}
>
  <slot />
</button>
